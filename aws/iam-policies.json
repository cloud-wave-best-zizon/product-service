{
    "ProductServicePolicy": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Action": [
            "dynamodb:GetItem",
            "dynamodb:PutItem",
            "dynamodb:UpdateItem",
            "dynamodb:DeleteItem",
            "dynamodb:Query",
            "dynamodb:Scan",
            "dynamodb:DescribeTable"
          ],
          "Resource": [
            "arn:aws:dynamodb:ap-northeast-2:*:table/products-table",
            "arn:aws:dynamodb:ap-northeast-2:*:table/products-table/index/*"
          ]
        },
        {
          "Effect": "Allow",
          "Action": [
            "logs:CreateLogGroup",
            "logs:CreateLogStream",
            "logs:PutLogEvents"
          ],
          "Resource": "arn:aws:logs:ap-northeast-2:*:*"
        }
      ]
    },
    "OrderServicePolicy": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Action": [
            "dynamodb:GetItem",
            "dynamodb:PutItem",
            "dynamodb:UpdateItem",
            "dynamodb:DeleteItem",
            "dynamodb:Query",
            "dynamodb:Scan",
            "dynamodb:DescribeTable"
          ],
          "Resource": [
            "arn:aws:dynamodb:ap-northeast-2:*:table/orders",
            "arn:aws:dynamodb:ap-northeast-2:*:table/orders/index/*"
          ]
        },
        {
          "Effect": "Allow",
          "Action": [
            "logs:CreateLogGroup",
            "logs:CreateLogStream",
            "logs:PutLogEvents"
          ],
          "Resource": "arn:aws:logs:ap-northeast-2:*:*"
        }
      ]
    },
    "TrustPolicy": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Principal": {
            "Federated": "arn:aws:iam::YOUR_ACCOUNT_ID:oidc-provider/oidc.eks.ap-northeast-2.amazonaws.com/id/YOUR_CLUSTER_OIDC_ID"
          },
          "Action": "sts:AssumeRoleWithWebIdentity",
          "Condition": {
            "StringEquals": {
              "oidc.eks.ap-northeast-2.amazonaws.com/id/YOUR_CLUSTER_OIDC_ID:sub": [
                "system:serviceaccount:ecommerce:product-service-sa",
                "system:serviceaccount:ecommerce:order-service-sa"
              ]
            }
          }
        }
      ]
    }
  }